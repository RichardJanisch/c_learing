{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}/dev",
                "-B",
                "${workspaceFolder}/dev/40_build",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Konfiguriert das Projekt mit CMake im Debug-Modus."
        },
        {
            "label": "Build with CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/dev/40_build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Configure CMake",
            "problemMatcher": ["$gcc"],
            "detail": "Task to build the project using CMake."
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--output-on-failure",
                "-C",
                "Debug",
                "-T",
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/dev/40_build"
            },
            "problemMatcher": ["$gcc"],
            "detail": "FÃ¼hrt die Tests mit CTest aus."
        }
    ]
}
